export TERM=xterm
export PATH=$HOME/.bin:$PATH

alias ls='ls --color'
alias vim='nvim'

function __parse_git_status {
  index=`if [ -d .git ]; then git status -s | awk '{ print $1 }'; fi;`

  case "$index" in
    *\?\?*)
      printf 'ยก'
      ;;
    *D*)
      printf '-'
      ;;
    *M*)
      printf '*'
      ;;
    *)
      ;;
  esac
}

export PS1="[\[\e[35m\]\W\[\e[m\]\[\e[37m\]$(__parse_git_status)\[\e[m\]] "
