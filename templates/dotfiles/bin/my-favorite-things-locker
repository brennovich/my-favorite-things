#!/bin/bash

# Handle being called from systemd service
if [ -z "$XDG_RUNTIME_DIR" ] && [ -z "$SWAYSOCK"]; then
  uid=$(id -u $USER)

  export XDG_RUNTIME_DIR="/run/user/"$uid"/"
  export SWAYSOCK="$(find $XDG_RUNTIME_DIR -iname sway*sock)"
fi

if [[ ${SWAYSOCK:+1} ]]; then
  lock='swaylock --font "Fira Sans" --indicator-radius 100 --indicator-thickness 20 --separatorcolor FFFFFF0C'
  swaygrab /tmp/screen.png
else
  lock=i3lock
  maim /tmp/screen.png
fi

convert /tmp/screen.png -scale 16% -scale 626% -fill black -colorize 25% /tmp/screen.png

lock_icon=$HOME/.my-favorite-things/lock-icon.png

if [[ -f $lock_icon ]]; then
  px=0
  py=0
  r=$(file $lock_icon | grep -o '[0-9]* x [0-9]*')
  rx=$(echo $r | cut -d' ' -f 1)
  ry=$(echo $r | cut -d' ' -f 3)
  sr=$(xrandr --query | grep ' connected' | sed 's/primary //' | cut -f3 -d' ' | tr -d '(normal')

  for res in $sr; do
    srx=$(echo $res | cut -d'x' -f 1)                   # x pos
    sry=$(echo $res | cut -d'x' -f 2 | cut -d'+' -f 1)  # y pos
    srox=$(echo $res | cut -d'x' -f 2 | cut -d'+' -f 2) # x offset
    sroy=$(echo $res | cut -d'x' -f 2 | cut -d'+' -f 3) # y offset

    px=$(($srox + $srx/2 - $rx/2))
    py=$(($sroy + $sry/2 - $ry/2))

    convert /tmp/screen.png $lock_icon -geometry +$px+$py -composite -matte /tmp/screen.png
  done
fi

$lock  -f -i /tmp/screen.png
