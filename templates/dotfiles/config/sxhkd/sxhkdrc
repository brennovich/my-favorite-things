##
# SXHKD Config File
#
# by @brennovich
#

# Global independent hotkeys
#

# Terminal emulator 
super + Return
	urxvt

# Program launcher
super + d
	dmenu_run

# Make sxhkd reload its configuration files:
super + shift + Escape
	pkill -USR1 -x sxhkd

# Start compositor
super + ctrl + c
	compton --config ~/.compton.conf

# Stop compositor
super + ctrl + k
	killall compton

# Manage monitor brightness
XF86MonBrightnessUp
	light -A 5

XF86MonBrightnessDown
	light -U 5

##
# BSPWM hotkeys
#
# The main idea is to make it as vim compatible as possible, very inspared in i3.
#

# Quit bspwm normally
super + alt + Escape
	bspc quit

# Reload bspwm config
super + Escape
	~/.config/bspwm/bspwmrc

# Window handling
#

# Close and kill program
super + {_,shift + }w
	bspc node -{c,k}

# Alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# If the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# Swap the current node and the biggest node
super + g
	bspc node -s biggest

# Set window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Set node flags
super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}

# Focus node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# Focus node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# Focus next/previous node
super + {_,shift + }c
	bspc node -f {next,prev}

# Focus next/previous desktop
super + bracket{left,right}
	bspc desktop -f {prev,next}

# Focus last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# Navigate through node's focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# Window positioning
#

# Send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# Preselect position
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# Preselect ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# Cancel preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# Cancel preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# Expand tiled space into given direction
super + alt + {h,j,k,l}
	bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# Contract tiled space into given direction
super + alt + shift + {h,j,k,l}
	bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

# Move a floating window
super + {Left,Down,Up,Right}
	xdo move {-x -20,-y +20,-y -20,-x +20}

# Pointer actions
#

# Focus
~button1
	bspc pointer -g focus

# Start move/resize
super + button{1-3}
	; bspc pointer -g {move,resize_side,resize_corner}

# End move/resize
super + @button{1-3}
	bspc pointer -u
