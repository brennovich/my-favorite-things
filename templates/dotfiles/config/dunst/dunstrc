# vim:ft=cfg

[global]
  font = "Terminus 9"
  allow_markup = true

  # The format of the message. Possible variables are:
  #   %a  appname
  #   %s  summary
  #   %b  body
  #   %i  iconname (including its path)
  #   %I  iconname (without its path)
  #   %p  progress value if set ([  0%] to [100%]) or nothing
  format = "%a: <b>%s</b>\n%b "

  # The frequency with wich text that is longer than the notification
  # window allows bounces back and forth.
  # This option conflicts with 'word_wrap'.
  # Set to 0 to disable
  bounce_freq = 0

  geometry = "320x20-0+0"

  shrink = no
  word_wrap = yes
  transparency = 12
  monitor = 0

  # Display notification on focused monitor
  follow = mouse

  # Draw a line of 'separatpr_height' pixel height between two notifications.
  separator_height = 1
  separator_color = frame

  padding = 8
  horizontal_padding = 10

[frame]
    width = 0
    color = "color_c"

[urgency_low]
  background = "color_a"
  foreground = "color_g"
  timeout = 10

[urgency_normal]
  background = "color_b"
  foreground = "color_h"
  timeout = 10

[urgency_critical]
  background = "color_g"
  foreground = "color_b"
  timeout = 20

[shortcuts]
  close = mod4+n
  history = mod4+shift+n
